{
  "name": "writr-editor",
  "version": "1.1.0",
  "description": "Frontend assets for Writr - A comprehensive Notion-like editor for Laravel",
  "main": "dist/writr.js",
  "module": "dist/writr.esm.js",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build": "npm run production",
    "bundle": "webpack --config webpack.bundle.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint resources/js --ext .js,.ts",
    "lint:fix": "eslint resources/js --ext .js,.ts --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.6",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "laravel-mix": "^6.0.49",
    "postcss": "^8.4.32",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "tailwindcss": "^3.3.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@editorjs/attaches": "^1.3.0",
    "@editorjs/checklist": "^1.5.0",
    "@editorjs/code": "^2.8.0",
    "@editorjs/delimiter": "^1.3.0",
    "@editorjs/editorjs": "^2.28.2",
    "@editorjs/embed": "^2.5.3",
    "@editorjs/header": "^2.7.0",
    "@editorjs/image": "^2.8.1",
    "@editorjs/inline-code": "^1.4.0",
    "@editorjs/link": "^2.5.0",
    "@editorjs/list": "^1.8.0",
    "@editorjs/marker": "^1.3.0",
    "@editorjs/nested-list": "^1.4.3",
    "@editorjs/quote": "^2.5.0",
    "@editorjs/raw": "^2.4.0",
    "@editorjs/simple-image": "^1.6.0",
    "@editorjs/table": "^2.2.2",
    "@editorjs/underline": "^1.1.0",
    "@editorjs/warning": "^1.3.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "editorjs-drag-drop": "^1.1.14",
    "editorjs-undo": "^2.0.24",
    "sortablejs": "^1.15.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/resources/js",
      "<rootDir>/tests/js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverageFrom": [
      "resources/js/**/*.{js,ts}",
      "!resources/js/**/*.d.ts"
    ]
  }
}
